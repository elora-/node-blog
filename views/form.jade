extends layout    

block content
  div(class='container')
    div(class='row header')
      div(class='col-md-9')
        h1 #{title}
        form(method="post")
          div(class='form-group')
            label(for='title') Title
            input(type="text", name="title", value='#{name}', class='form-control')
          div(class='form-group')
            label(for='content') Content
            textarea(id="content", name="content", class='form-control')
          button(type='submit', class='btn btn-primary') Submit
      div(class='col-md-3 sidebar')
        a(class='btn btn-default btn-lg btn-block', href='/', role='button') Home
        unless title == 'New Post'
          a(class='btn btn-default btn-lg btn-block', href='/new-post', role='button') New Post
        a(class='btn btn-primary btn-lg btn-block', href='#', role='button') #{title}
    script.
      document.getElementById("content").value = '#{content}'
      
      
