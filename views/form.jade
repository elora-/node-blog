extends layout    

block content
  div(class='container')
    div(class='row header')
      div(class='col-md-9')
        h1 #{title}
        form(method="post")
          div(class='form-group')
            label(for='title') Title
            input(type="text", id='title', name="title", value='#{name}', class='form-control')
          div(class='form-group')
            label(for='tags') Tags
            input(type='text', id='tags', name='tags', value='#{tags}', class='form-control')
          div(class='form-group')
            label(for='content') Content
            textarea(id="content", name="content", class='form-control', rows='20')
          button(type='submit', class='btn btn-primary') Submit
      div(class='col-md-3 sidebar')
        a(class='btn btn-default btn-lg btn-block', href='/', role='button') Home
        if title == 'New Post'
          a(class='btn btn-primary btn-lg btn-block', href='/new', role='button') #{title}
          a(class='btn btn-default btn-lg btn-block', href='/tags', role='button') Tags
        if title == 'Update Post'
          a(class='btn btn-default btn-lg btn-block', href='/new', role='button') New Post
          a(class='btn btn-default btn-lg btn-block', href='/tags', role='button') Tags
          hr
          a(class='btn btn-primary btn-lg btn-block', href='#', role='button') #{title}
    div(class='footer row')
      if currentUser
        div(class='col-md-11')
          p Logged in as: #{currentUser.username}
        div(class='col-md-1')
          p: a(href='/logout') Log Out
      else
        div(class='col-md-11')
          p: a(href='/login') Log In
        div(class='col-md-1')
          p: a(href='/signup') Sign Up
    script.
      document.getElementById("content").value = '#{content}'
      
      
