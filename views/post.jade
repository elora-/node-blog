extends layout

block content
  div(class='container')
    div(class='row header')
      div(class='col-md-9')
        h1 #{name} <br />
          small Created at: #{created_at} <br />
          small Updated at: #{updated_at} <br />
          small Tags: #{tags}
        p #{content}
      div(class='col-md-3 sidebar pull-right')
        a(class='btn btn-default btn-lg btn-block', href='/', role='button') Home
        a(class='btn btn-default btn-lg btn-block', href='/new', role='button') New Post
        a(class='btn btn-default btn-lg btn-block', href='/tags', role='button') Tags
        hr
        a(class='btn btn-default btn-lg btn-block', href='/post/#{id}/update', role='button') Update Post
        a(class='btn btn-danger btn-lg btn-block', id='delete', href='/post/#{id}/delete', role='button') Delete Post
  script.
    $('#delete').click(function(e) {
      e.preventDefault();
      
      if(confirm("Are you sure?")) {
        window.location = '/post/#{id}/delete'
      }
    });
